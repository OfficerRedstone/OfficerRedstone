{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "modellbahnunion": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".w--100.w-max--68em.w-min_320px.no-print.hcenter-block.pos--f.p--b.infobox"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "url",
                        "url": [
                            "modellbahnunion.com"
                        ]
                    }
                ]
            }
        ],
        "methods": [
            {
                "action": {
                    "type": "hide",
                    "target": {
                        "selector": ".w--100.w-max--68em.w-min_320px.no-print.hcenter-block.pos--f.p--b.infobox"
                    }
                },
                "name": "HIDE_CMP"
            },
            {
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "span.button_default.font--medium.big:nth-of-type(2)",
                        "textFilter": [
                            "nur ausgewählte zulassen"
                        ]
                    }
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "span.button_default.font--medium.big:nth-of-type(2)",
                        "textFilter": [
                            "nur ausgewählte zulassen"
                        ]
                    }
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}
