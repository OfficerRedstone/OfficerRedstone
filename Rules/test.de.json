{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "test.de": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "url",
                        "url": [
                            "test.de"
                        ]
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "#cmpbox"  // Warten auf das Cookie-Banner (#cmpbox)
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "action": {
                    "type": "waitcss",
                    "retries": 10,
                    "waitTime": 1
                },
                "name": "WAIT_FOR_BANNER"
            },
            {
                "action": {
                    "type": "multiclick",
                    "target": {
                        "selector": ".cmpboxbtnno"  // Selektor f√ºr "Alle ablehnen"-Button
                    }
                },
                "name": "CLICK_REJECT_ALL"
            },
            {
                "action": {
                    "type": "waitcss",
                    "retries": 10,
                    "waitTime": 1
                },
                "name": "WAIT_FOR_CONSENT"
            }
        ]
    }
}
